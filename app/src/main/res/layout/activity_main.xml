    <LinearLayout
        android:id="@+id/ln_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_weight="10"
            android:background="#004D43"
            android:src="@drawable/hello"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_hello"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="-30dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="2"
        app:cardCornerRadius="40dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:weightSum="5">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Welcome to PEGADAIAN"
                android:textColor="#252525"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/nexa_bold"/>
            <TextView
                android:id="@+id/welcome2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Before you visit, please check in first."
                android:textColor="#282828"
                android:fontFamily="@font/nexa_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="right"
                android:weightSum="10">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="4"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/nexa_bold"
                    android:background="@drawable/checkin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="4"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    android:text="CHECK OUT"
                    android:textColor="#fff"
                    android:fontFamily="@font/nexa_bold"
                    android:background="@drawable/btn_rounded3"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
